<mvc:View xmlns:cc="cc.control" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:sb="sb.control"
	xmlns:comm="sap.ui.commons" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" height="100%" controllerName="sb.controller.fixedOrders">
    <Panel class="no-overflow sapUiMediumMarginBottom">
        <headerToolbar>
            <Toolbar design="Solid" class="dropdownToolbar">
                <Title text="Fixed booking sales orders" titleStyle="H3"/>
                <ToolbarSpacer/>
                <Button icon="sap-icon://navigation-up-arrow" type="Transparent" press="toggleBox"/>
            </Toolbar>
        </headerToolbar>
        <content>
            <sb:div id="fixed-orders-content">
                <sb:div class="sb-filter-bar">
                    <Toolbar design="Transparent">
                        <ToolbarSpacer/>
                        <Link text="Hide Filter Bar" target="fixed-filter" press="hideFilterBar"/>
                    </Toolbar>
                    <l:Grid id="fixed-filter" defaultSpan="XL2 L4 M4 S6" class="filter-content">
                        <VBox>
                            <Text text="Region"/>
                            <Input showValueHelp="true"/>
                        </VBox>
                        <VBox>
                            <Text text="Sub Region"/>
                            <Input showValueHelp="true"/>
                        </VBox>
                        <VBox>
                            <Text text="Ord Type"/>
                            <MultiInput id="order-types" enableMultiLineMode="true" tokens="{FixedSearch>/OrderType}" valueHelpRequest="onValueHelp">
                                <tokens>
                                    <Token delete="removeOrderTypeToken" text="{parts:[{path:'FixedSearch>operation'},{path:'FixedSearch>value1'},{path:'FixedSearch>value2'}],formatter:'.formatter.writeTokenText'}"/>
                                </tokens>
                            </MultiInput>
                        </VBox>
                        <VBox>
                            <Text text="Req Del Date"/>
                            <DatePicker displayFormat="dd/MM/yyyy"/>
                        </VBox>
                        <VBox>
                            <Text text=""/>
                            <Button text="Search" icon="sap-icon://search"/>
                        </VBox>
                    </l:Grid>
                </sb:div>
                <sb:dragDropTable received="itemAdded" id="fixed-orders" connectWith=".fixed-sort">
                    <Table selectionChange="selectionChange" rememberSelections="false" mode="MultiSelect" class="order-table sapUiSmallMarginTopBottom sortable-table" items="{Orders>/}" id="table-fixed-orders" showNoData="false">
                        <columns>
                            <Column>
                                <Link text="Cust" press="sort" target="SoldTo"/>
                            </Column>
                            <!--<Column>
                                <Link text="Created" press="sort" target="Created" wrapping="true"/>
                            </Column>-->
                            <Column>
                                <Link text="PO" press="sort" target="ShipToPO" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Ship To" press="sort" target="ShipTo" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Name" press="sort" target="SoldToName" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Town" press="sort" target="ShipToAddr.City" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Postcode" press="sort" target="Postcode" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Ord Type" press="sort" target="OrderType" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Vol" press="sort" target="Volume" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Kg" press="sort" target="Weight" wrapping="true"/>
                            </Column>
                            <Column styleClass="order-change">
                                <Link text="Bkd Date" press="sort" target="FixedDateTime" wrapping="true"/>
                            </Column>
                            <Column styleClass="order-change">
                                <Link text="Bkd Time" press="sort" target="BkdTime" wrapping="true"/>
                            </Column>
                            <Column styleClass="order-change">
                                <Link text="Bkd Ref" press="sort" target="CustRef" wrapping="true"/>
                            </Column>
                            <Column styleClass="order-change">
                                <Link text="Distance" press="sort" target="Distance" wrapping="true"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem selected="{Orders>Edit}">
                                <Text text="{Orders>SoldTo}"/>
                                <!--<Text text="{Orders>Created}"/>-->
                                <Link text="{Orders>ShipToPO}" press="viewOrderDetails" wrapping="true"/>
                                <Text text="{Orders>ShipTo}"/>
                                <Text text="{Orders>SoldToName}"/>
                                <Text text="{Orders>ShipToAddr/City}"/>
                                <Text text="{Orders>Postcode}"/>
                                <Text text="{Orders>OrderType}"/>
                                <Text text="{Orders>Volume}"/>
                                <Text text="{Orders>Weight}"/>
                                <sb:div>
                                    <Text text="{path:'Orders>FixedDateTime',formatter:'.formatter.writeDate'}" visible="{= ${Orders>Edit} ? false : true }"/>
                                    <DatePicker width="125px" displayFormat="dd.MM.yyyy" dateValue="{Orders>EditFields/FixedDateTime}" visible="{= ${Orders>Edit} ? true : false }" change="changeFixedDate"/>
                                </sb:div>
                                <sb:div>
                                    <Text text="{path:'Orders>FixedDateTime',formatter:'.formatter.writeTime'}" visible="{= ${Orders>Edit} ? false : true }"/>
                                    <TimePicker width="100px" displayFormat="HH:mm" value="{Orders>EditFields/FixedTime}" visible="{= ${Orders>Edit} ? true : false }" change="changeFixedTime"/>
                                </sb:div>
                                <sb:div>
                                    <Text text="{Orders>CustRef}" visible="{= ${Orders>Edit} ? false : true }"/>
                                    <Input width="125px" value="{Orders>EditFields/CustRef}" visible="{= ${Orders>Edit} ? true : false }" change="changeCustRef"/>
                                </sb:div>
                                <sb:div>
                                    <Text text="{Orders>Distance}" visible="{= ${Orders>Edit} ? false : true }"/>
                                    <Button visible="{= ${Orders>Edit} ? true : false }" icon="sap-icon://save" press="saveOrder"/>
                                </sb:div>
                            </ColumnListItem>
                        </items>
                    </Table>
                </sb:dragDropTable>
                <Toolbar class="sb-button-toolbar">
                    <ToolbarSpacer/>
                    <Button text="Add to existing shipment" type="Emphasized" press="addToExisting" enabled="{= ${ExistingShipment>/Ref} === undefined ? false : true }" icon="sap-icon://add"/>
                    <Button text="Add to new shipment" type="Emphasized" press="addToNew" icon="sap-icon://shipping-status"/>
                </Toolbar>
            </sb:div>
        </content>
    </Panel>
</mvc:View>