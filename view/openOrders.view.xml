<mvc:View xmlns:cc="cc.control" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:sb="sb.control"
	xmlns:comm="sap.ui.commons" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" height="100%" controllerName="sb.controller.openOrders">
    <Panel class="no-overflow sapUiMediumMarginBottom">
        <headerToolbar>
            <Toolbar design="Solid" class="dropdownToolbar">
                <Title text="Open booking sales orders" titleStyle="H3"/>
                <ToolbarSpacer/>
                <Button icon="sap-icon://navigation-up-arrow" type="Transparent" press="toggleBox"/>
            </Toolbar>
        </headerToolbar>
        <content>
            <sb:div id="open-orders-content">
                <sb:div class="sb-filter-bar">
                    <Toolbar design="Transparent">
                        <ToolbarSpacer/>
                        <Link text="Hide Filter Bar" target="open-filter" press="hideFilterBar"/>
                    </Toolbar>
                    <l:Grid id="open-filter" defaultSpan="XL2 L4 M4 S6" class="filter-content">
                        <VBox>
                            <Text text="Region"/>
                            <Input showValueHelp="true"/>
                        </VBox>
                        <VBox>
                            <Text text="Sub Region"/>
                            <Input showValueHelp="true"/>
                        </VBox>
                        <VBox>
                            <Text text="Ord Type"/>
                            <MultiInput id="order-types" enableMultiLineMode="true" tokens="{OpenSearch>/OrderType}" valueHelpRequest="onValueHelp">
                                <tokens>
                                    <Token delete="removeOrderTypeToken" text="{parts:[{path:'OpenSearch>operation'},{path:'OpenSearch>value1'},{path:'OpenSearch>value2'}],formatter:'.formatter.writeTokenText'}"/>
                                </tokens>
                            </MultiInput>
                        </VBox>
                        <VBox>
                            <Text text="Req Del Date"/>
                            <DatePicker displayFormat="dd/MM/yyyy"/>
                        </VBox>
                        <VBox>
                            <Text text=""/>
                            <Button text="Search" icon="sap-icon://search"/>
                        </VBox>
                    </l:Grid>
                </sb:div>
                <sb:dragDropTable  received="itemAdded" id="open-orders" name="open-sort" connectWith=".open-sort">
                    <Table selectionChange="selectionChange" rememberSelections="false" mode="MultiSelect" class="order-table sapUiSmallMarginTopBottom open-sort sortable-table" items="{OpenOrders>/}" showNoData="false" id="table-open-orders">
                        <columns>
                            <Column width="50px">
                                <Link text="Cust" press="sort" target="SoldTo"/>
                            </Column>
                            <!--<Column>
                                <Link text="Created" press="sort" target="Created" wrapping="true"/>
                            </Column>-->
                            <Column>
                                <Link text="PO" press="sort" target="ShipToPO" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Ship to" press="sort" target="ShipTo" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Name" press="sort" target="SoldToName" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Town" press="sort" target="ShipToAddr.City" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Postcode" press="sort" target="Postcode" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Ord Type" press="sort" target="OrderType" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Vol" press="sort" target="Volume" wrapping="true"/>
                            </Column>
                            <Column>
                                <Link text="Kg" press="sort" target="Weight" wrapping="true"/>
                            </Column>
                            <Column styleClass="order-change">
                                <Link text="Bkd Date" press="sort" target="FixedDateTime" wrapping="true"/>
                            </Column>
                            <Column styleClass="order-change">
                                <Link text="Bkd Time" press="sort" target="BkdTime" wrapping="true"/>
                            </Column>
                            <Column styleClass="order-change">
                                <Link text="Bkd Ref" press="sort" target="CustRef" wrapping="true"/>
                            </Column>
                            <Column styleClass="order-change">
                                <Link text="Distance" press="sort" target="Distance" wrapping="true"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem selected="{OpenOrders>Edit}">
                                <Text text="{OpenOrders>SoldTo}"/>
                                <!--<Text text="{OpenOrders>Created}"/>-->
                                <Link text="{OpenOrders>ShipToPO}" press="viewOrderDetails" wrapping="true"/>
                                <Text text="{OpenOrders>ShipTo}"/>
                                <Text text="{OpenOrders>SoldToName}"/>
                                <Text text="{OpenOrders>ShipToAddr/City}"/>
                                <Text text="{OpenOrders>Postcode}"/>
                                <Text text="{OpenOrders>OrderType}"/>
                                <Text text="{OpenOrders>Volume}"/>
                                <Text text="{OpenOrders>Weight}"/>
                                <sb:div>
                                    <Text text="{path:'OpenOrders>FixedDateTime',formatter:'.formatter.writeDate'}" visible="{= ${OpenOrders>Edit} ? false : true }"/>
                                    <DatePicker width="125px" displayFormat="dd.MM.yyyy" dateValue="{OpenOrders>EditFields/FixedDateTime}" visible="{= ${OpenOrders>Edit} ? true : false }" change="changeFixedDate"/>
                                </sb:div>
                                <sb:div>
                                    <Text text="{path:'OpenOrders>FixedDateTime',formatter:'.formatter.writeTime'}" visible="{= ${OpenOrders>Edit} ? false : true }"/>
                                    <TimePicker width="100px" displayFormat="HH:mm" value="{OpenOrders>EditFields/FixedTime}" visible="{= ${OpenOrders>Edit} ? true : false }" change="changeFixedTime"/>
                                </sb:div>
                                <sb:div>
                                    <Text text="{OpenOrders>CustRef}" visible="{= ${OpenOrders>Edit} ? false : true }"/>
                                    <Input width="125px" value="{OpenOrders>EditFields/CustRef}" visible="{= ${OpenOrders>Edit} ? true : false }" change="changeCustRef"/>
                                </sb:div>
                                <sb:div>
                                    <Text text="{OpenOrders>Distance}" visible="{= ${OpenOrders>Edit} ? false : true }"/>
                                    <Button visible="{= ${OpenOrders>Edit} ? true : false }" icon="sap-icon://save" press="saveOrder"/>
                                </sb:div>
                            </ColumnListItem>
                           <!-- <ColumnListItem>
                                <Text text="{OpenOrders>Customer}"/>
                                <Text text="{OpenOrders>Created}"/>
                                <Text text="{OpenOrders>OrderNum}"/>
                                <Text text="{OpenOrders>ShipTo}"/>
                                <Text text="{OpenOrders>Name}"/>
                                <Text text="{OpenOrders>Town}"/>
                                <Text text="{OpenOrders>Postcode}"/>
                                <Text text="{OpenOrders>OrderType}"/>
                                <Text text="{OpenOrders>Volume}"/>
                                <Text text="{OpenOrders>Kg}"/>
                                <Text text="{OpenOrders>BkdDate}"/>
                                <Text text="{OpenOrders>BkdTime}"/>
                                <Text text="{OpenOrders>Distance}"/>
                            </ColumnListItem>-->
                        </items>
                    </Table>
                </sb:dragDropTable>
                <Toolbar class="sb-button-toolbar">
                    <ToolbarSpacer/>
                    <Button text="Add to existing shipment" type="Emphasized" press="addToExisting" enabled="{= ${ExistingShipment>/Ref} === undefined ? false : true }" icon="sap-icon://add"/>
                    <Button text="Add to new shipment" type="Emphasized" press="addToNew" icon="sap-icon://shipping-status"/>
                </Toolbar>
            </sb:div>
        </content>
    </Panel>
</mvc:View>