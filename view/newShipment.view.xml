                            </HBox>
                        </l:Grid>-->
                    </sb:div>
                    <sb:dragDropTable change="reorder" dropFrom="fixed-orders,open-orders">
                        <Table fixedLayout="false" class="sapUiSmallMarginTopBottom fixed-sort open-sort backload-sort" items="{NewShipment>/Lines}" showNoData="false" id="new-shipment">
                            <columns>
                                <Column>
                                    <Text text="Drop"/>
                                </Column>
                                <Column>
                                    <Text text="Cust"/>
                                </Column>
                                <Column>
                                    <Text text="Ord No"/>
                                </Column>
                                <Column>
                                    <Text text="D/U"/>
                                </Column>
                                <Column>
                                    <Text text="Name"/>
                                </Column>
                                <Column>
                                    <Text text="Town"/>
                                </Column>
                                <Column>
                                    <Text text="Postcode"/>
                                </Column>
                                <Column>
                                    <Text text="Vol"/>
                                </Column>
                                <Column>
                                    <Text text="Kg"/>
                                </Column>
                                <Column>
                                    <Text text="Bkd date"/>
                                </Column>
                                <Column>
                                    <Text text="Bkd time"/>
                                </Column>
                                <Column>
                                    <Text text="Bkd Ref"/>
                                </Column>
                                <Column>
                                    <Text text="Distance"/>
                                </Column>
                                <Column>
                                    <Text text="Travel time"/>
                                </Column>
                                <Column>
                                    <Text text="Tip time"/>
                                </Column>
                                <Column>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <Text text="{NewShipment>Drop}"/>
                                    <Text text="{NewShipment>Order/SoldTo}"/>
                                    <Text text="{path:'NewShipment>Order/OrderNum',formatter:'.formatter.writeNumber'}"/>
                                    <Text text="D"/>
                                    <Text text="{NewShipment>Order/SoldToName}"/>
                                    <Text text="{NewShipment>Order/ShipToAddr/City}"/>
                                    <Text text="{NewShipment>Order/Postcode}"/>
                                    <Text text="{NewShipment>Order/Volume}"/>
                                    <Text text="{NewShipment>Order/Weight}"/>
                                    <Text text="{path:'NewShipment>Order/FixedDateTime',formatter:'.formatter.writeDate'}"/>
                                    <Text text="{path:'NewShipment>Order/FixedDateTime',formatter:'.formatter.writeTime'}"/>
                                    <Text text="{NewShipment>Order/CustRef}"/>
                                    <Text text="{NewShipment>Distance}"/>
                                    <Text text="{NewShipment>Time}"/>
                                    <Text text="{NewShipment>RunningTime}"/>
                                    <core:Icon src="sap-icon://delete" press="remove"/>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </sb:dragDropTable>
                    <Toolbar class="sb-button-toolbar">
                        <Button id="show-new-map" visible="false" text="View map" icon="sap-icon://map" type="Transparent" press="viewMap"/>
                        <ToolbarSpacer/>
                        <Button text="Cancel"/>
                        <Button text="Save" type="Emphasized"/>
                    </Toolbar>
                    <sb:div id="new-map" class="sapUiSmallMarginTop" visible="false"/>
                 </sb:div>
            </sb:div>
        </content>
    </Panel>
</mvc:View>