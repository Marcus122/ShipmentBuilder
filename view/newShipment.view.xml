<mvc:View xmlns:cc="cc.control" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:sb="sb.control" xmlns:f="sap.ui.layout.form"
	xmlns:comm="sap.ui.commons" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" height="100%" controllerName="sb.controller.newShipment">
    <Panel class="sapUiMediumMarginBottom new-panel">
        <headerToolbar>
            <Toolbar design="Solid" class="dropdownToolbar">
                <Title text="Create New Shipment" titleStyle="H3"/>
                <ToolbarSpacer/>
                <Button icon="sap-icon://navigation-up-arrow" type="Transparent" press="toggleBox"/>
            </Toolbar>
        </headerToolbar>
        <content>
            <sb:div id="new-shipment-data">
                <sb:div>
                    <f:Form
                        maxContainerCols="2"
                        editable="true">
                        <f:layout>
                            <f:ResponsiveGridLayout
                                labelSpanL="1"
                                labelSpanM="1"
                                emptySpanL="8"
                                emptySpanM="8"
                                columnsL="1"
                                columnsM="1" />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer>
                                <f:formElements>
                                    <f:FormElement label="Ref no">
                                        <f:fields>
                                            <Input/>
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                    <l:Grid defaultSpan="XL3 L4 M4 S6">
                        <HBox>
                            <Text text="Start date" class="sapUiSmallMarginEnd"/>
                            <Label text="17.03.2016"/>
                        </HBox>
                        <HBox>
                            <Text text="End date" class="sapUiSmallMarginEnd"/>
                            <Label text="17.03.2016"/>
                        </HBox>
                        <HBox>
                            <Text text="Travel time" class="sapUiSmallMarginEnd"/>
                            <Label text="1.45"/>
                        </HBox>
                    </l:Grid>
                    <l:Grid defaultSpan="XL3 L4 M4 S6">
                        <HBox>
                            <Text text="Start time" class="sapUiSmallMarginEnd"/>
                            <Label text="09:00"/>
                        </HBox>
                        <HBox>
                            <Text text="End time" class="sapUiSmallMarginEnd"/>
                            <Label text="17:03"/>
                        </HBox>
                        <HBox>
                            <Text text="Travel distance" class="sapUiSmallMarginEnd"/>
                            <Label text="105"/>
                        </HBox>
                    </l:Grid>
                    <l:Grid defaultSpan="XL3 L4 M4 S6">
                        <HBox>
                            <Text text="Shipping Point" class="sapUiSmallMarginEnd"/>
                            <Label text="Wardle"/>
                        </HBox>
                    </l:Grid>
                </sb:div>
                <sb:dropTable change="reorder">
                <Table fixedLayout="false" class="sapUiSmallMarginTopBottom fixed-sort open-sort backload-sort" items="{NewShipment>/Lines}" showNoData="false" id="new-shipment">
                    <columns>
                        <Column>
                            <Text text="Drop"/>
                        </Column>
                        <Column>
                            <Text text="Cust"/>
                        </Column>
                        <Column>
                            <Text text="Ord No"/>
                        </Column>
                        <Column>
                            <Text text="D/U"/>
                        </Column>
                        <Column>
                            <Text text="Name"/>
                        </Column>
                        <Column>
                            <Text text="Town"/>
                        </Column>
                        <Column>
                            <Text text="Postcode"/>
                        </Column>
                        <Column>
                            <Text text="Vol"/>
                        </Column>
                        <Column>
                            <Text text="Kg"/>
                        </Column>
                        <Column>
                            <Text text="Bkd date"/>
                        </Column>
                        <Column>
                            <Text text="Bkd time"/>
                        </Column>
                        <Column>
                            <Text text="Bkd Ref"/>
                        </Column>
                        <Column>
                            <Text text="Distance"/>
                        </Column>
                        <Column>
                            <Text text="Travel time"/>
                        </Column>
                        <Column>
                            <Text text="Tip time"/>
                        </Column>
                        <Column>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <Text text="{NewShipment>Drop}"/>
                            <Text text="{NewShipment>Order/Customer}"/>
                            <Text text="{NewShipment>Order/Order}"/>
                            <Text text="D"/>
                            <Text text="{NewShipment>Order/Name}"/>
                            <Text text="{NewShipment>Order/Town}"/>
                            <Text text="{NewShipment>Order/Postcode}"/>
                            <Text text="{NewShipment>Order/Volume}"/>
                            <Text text="{NewShipment>Order/Kg}"/>
                            <Text text="{NewShipment>Order/BkdDate}"/>
                            <Text text="{NewShipment>Order/BkdTime}"/>
                            <Text text="{NewShipment>Order/BkdRef}"/>
                            <Text text="94.5"/>
                            <Text text="1.45"/>
                            <Text text="1.00"/>
                            <core:Icon src="sap-icon://delete" press="remove"/>
                        </ColumnListItem>
                    </items>
                </Table>
                </sb:dropTable>
                <Toolbar class="sb-button-toolbar">
                    <Button id="show-new-map" visible="false" text="View map" icon="sap-icon://map" type="Transparent" press="viewMap"/>
                    <ToolbarSpacer/>
                    <Button text="Cancel"/>
                    <Button text="Save" type="Emphasized"/>
                </Toolbar>
                <sb:div id="new-map" class="sapUiSmallMarginTop" visible="false"/>
            </sb:div>
        </content>
    </Panel>
</mvc:View>